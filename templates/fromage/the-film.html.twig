        <span class="movie--rating-source">{{ rating.source }}</span>
        <span class="movie--rating-value">{{ rating.value }}</span>

    {% endfor %} #}

    <span class="movie--rating-source">{{ movie.imdbRating }}</span>
    <span class="movie--rating-value">{{ movie.Metascore }}</span>



  </div>
  

</div>

   

{% endblock %}

